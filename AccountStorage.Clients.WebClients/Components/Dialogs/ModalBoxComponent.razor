
<div class="modal" style="display: block">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="Hide">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Hide">Close</button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback HideModalBox { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Message { get; set; }

    private void Hide()
    {
        HideModalBox.InvokeAsync();
    }

}
