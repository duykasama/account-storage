
<div class="modal" style="display: block">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" @onclick="Hide">
                    <span aria-hidden="true"></span>
                </button>
            </div>
            <div class="modal-body">
                @BodyFragment
            </div>
            <div class="modal-footer">
                @foreach (var button in Buttons)
                {
                    <button type="button" class="@button.CssClass" @onclick="() => { button.HandleOnclick.Invoke(); }">@button.Name</button>
                }
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public EventCallback HideModalBox { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment BodyFragment { get; set; }

    [Parameter]
    public ICollection<ButtonDefinition> Buttons { get; set; }

    private void Hide()
    {
        HideModalBox.InvokeAsync();
    }

}
